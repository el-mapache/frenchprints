.grid-spacing
  .control-group
    = f.label :event_name
    %em Should be something short and descriptive, i.e. "death".
    .controls
      = f.text_field :event_name

  = render "admin/partials/date_picker", f: f, attr: "start_date"
  = render "admin/partials/date_picker", f: f, attr: "end_date"

  = control_group(f, :text_field, :street_address, {placeholder: "Gare du Nord", required: true})
  = control_group(f, :text_field, :city, {placeholder: "Paris", required: true})
  = control_group(f, :text_field, :country, {placeholder: "France", required: true})
  = control_group(f, :text_field, :state)
  = control_group(f, :text_field, :province)

