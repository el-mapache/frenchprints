.row
  .span8.well
    .control-group
      %label
        Pick a location to associate employee with.
      .controls
        = f.select :location_id, @journal.locations.all.collect {|l| [ l.full_address + " #{l.event_name}", l.id ] }

    = control_group(f, :text_field, :personnel_histories, {value: "", placeholder: "Begin typing to find a person", autocomplete: "off", data: {provide: "typeahead", source: Person.all_with_attribute("name")}})

    %h5 Enter the start and end dates for this record. 
    .control-group
      = f.label :start_date, class: "required"
      .controls
        .input-append.date
          = f.text_field :start_date, data: {plugin: "datepicker", date: "01-01-1880", :"date-viewmode" => "years", :"date-format" => "dd/mm/yyyy"}, class: "span2 start-date"
          %span.add-on
            %i.icon-calendar

    .control-group
      = f.label :end_date
      .controls
        .input-append.date
          = f.text_field :start_date, data: {plugin: "datepicker", date: "01-01-1880", :"date-viewmode" => "years", :"date-format" => "dd/mm/yyyy"}, class: "span2 end-date"
          %span.add-on
            %i.icon-calendar
